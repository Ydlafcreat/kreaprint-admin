<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_management_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#541D1D"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengguna Terdaftar"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manajemen pengguna dan transaksi"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="#FFFFFF"
                android:alpha="0.8"/>
        </LinearLayout>

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#6A2A2A"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="#FFFFFF"
                    android:alpha="0.6"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="Cari pengguna..."
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="14sp"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- User List Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Pengguna"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- User 1 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#6A2A2A"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/pp"
                    android:scaleType="centerCrop"
                    android:background="#7E3A3A"
                    android:contentDescription="@string/user_avatar"
                    android:clipToOutline="true"
                    android:outlineProvider="background"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sambaloge"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sambal@example.com"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#FFFFFF"
                        android:alpha="0.7"/>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Riwayat"
                    android:textColor="#FF9800"
                    android:background="@drawable/outline_button"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawableTint="#FF9800"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- User 2 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#6A2A2A"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/pp"
                    android:scaleType="centerCrop"
                    android:background="#7E3A3A"
                    android:contentDescription="@string/user_avatar"
                    android:clipToOutline="true"
                    android:outlineProvider="background"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aduhhhh"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="hiyakk@example.com"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#FFFFFF"
                        android:alpha="0.7"/>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Riwayat"
                    android:textColor="#FF9800"
                    android:background="@drawable/outline_button"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawableTint="#FF9800"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Transaction History Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Transaksi Terakhir"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Empty State (You can replace with actual transaction items) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#6A2A2A"
            android:backgroundTint="#6A2A2A"
            android:backgroundTintMode="multiply"
            android:padding="24dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_receipt"
                app:tint="#FFFFFF"
                android:alpha="0.5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Belum ada transaksi"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:alpha="0.7"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>