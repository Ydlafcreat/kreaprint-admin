<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4a0d0d"
    tools:context=".AdminLogin">

    <!-- Dekorasi Kanan Atas -->
    <ImageView
        android:id="@+id/topDecoration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/elemen" />

    <!-- Dekorasi Kiri Bawah -->
    <ImageView
        android:id="@+id/bottomDecoration"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="bottom|start"
        android:scaleType="fitXY"
        android:src="@drawable/shape"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tombol Back -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp" />

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- Username -->
            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <!-- Password + Eye Icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@drawable/edittext_border"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC" />

                <ImageView
                    android:id="@+id/eye_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="Toggle Password" />
            </RelativeLayout>

            <!-- Sign Up Button -->

            <!-- Terms -->
            <Button
                android:id="@+id/signupButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/primary_blue"
                android:text="Sign up"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By signing up, you agree to our Terms and Privacy Policy."
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:layout_marginBottom="24dp" />

            <!-- Continue with Google -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rounded_white_background"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/google"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Google"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Login -->
            <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saya memiliki akun Login"
                android:textColor="#87CEFA"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
